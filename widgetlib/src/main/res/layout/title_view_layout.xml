<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/title_view_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/icon_back"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/title_view_back_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/title_view_back_icon"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        tools:text="返回"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/title_view_right_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/icon_close"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/title_view_right_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/title_view_right_icon2"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/icon_close"
        android:visibility="gone"/>
    <com.android.widgetlib.simplewidget.AutoWrapTextView
        android:id="@+id/title_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/title_view_right_icon1"
        android:layout_toRightOf="@+id/title_view_back_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>
</RelativeLayout>